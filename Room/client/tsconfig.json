{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,                     // Skip type checking for library files
    "esModuleInterop": true,                  // Enable interop with CommonJS modules
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "baseUrl": ".",                           // Add base URL for module resolution
    "paths": {
      "*": ["node_modules/*"],                // Resolve modules from node_modules
      "@types/*": ["./types/*"]               // Allow custom type declarations
    },
    "typeRoots": ["node_modules/@types", "./types"] // Ensure TypeScript checks these folders
  },
  "include": ["src"],                         // Include the src directory
  "references": [{ "path": "./tsconfig.node.json" }]
}
